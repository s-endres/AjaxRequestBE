@model IEnumerable<RequestApp.Models.Book>

@{
    ViewBag.Title = "Index";
}
<!-- Bootstrap Core CSS -->
<link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- MetisMenu CSS -->
<link href="/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">
<!-- DataTables CSS -->
<link href="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
<!-- DataTables Responsive CSS -->
<link href="/bower_components/datatables-responsive/css/dataTables.responsive.css" rel="stylesheet">
<!-- Custom Fonts -->
<link href="/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- DataTables JavaScript -->
<script src="/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<script>
    
    $(document).ready(function () {
        $MainTable = $("#myDT").DataTable({
            responsive: true,
            "columnDefs":
		[
			{
			    "targets": [0,7],
			    "sortable": false
			}

		]
        });

        $.ajax({
            type: "GET",
            url: "http://localhost:61232/Books/GetMyJsonValues",
            data: JSON.stringify(),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (JsonData) {
                
                $.each(JsonData, function (index, item) {
                    var NewRow = ['<span class="glyphicon glyphicon-plus" onclick="ShowAuthors(this)"></span>',
                                  item.BookId,
                                  item.Description,
                                  item.ImageUrl,
                                  item.PublicationYear,
                                  item.Publisher,
                                  item.Title,
                                 '<button type="button" class="btn btn-info btn-sm" onclick="GoToEdit(this)" >Edit</button>' +
                                 '<button type="button" class="btn btn-info btn-sm" onclick="RemoveModal(this)">Remove</button>'];
                    $MainTable.row.add(NewRow).draw();

                });

            },
            error: function () {
                console.log("There was an error with the JSON file.");
            }
        });
    });
    
    function RemoveModal(button)
    {
        
        $("#ConfirmationModal").modal();
        $("#StoredIndex").val($(button).parents("tr").index());
            
    }

    function RemoveFromTable()
    {
        var RowIndex = $("#StoredIndex").val();
        $.ajax({
            type: "DELETE",
            url: "http://localhost:61232/Books/DeleteBok",
            data: JSON.stringify({ bookId: $MainTable.row(RowIndex).data()[0] }),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (JsonData) {
                if (JsonData) {
                    $MainTable.row(RowIndex).remove().draw();
                } else {
                    ErrorAlert();
                }

            },
            error: function ()
            {
                ErrorAlert();
            }
    
        });

    }

    function GoToEdit(button)
    {
        window.location.replace("http://localhost:61232/Books/Edit?BookID=" + $MainTable.row($(button).parents("tr").index()).data()[0]);
    }

   
    function AuthorSubTable(DataArray) {
        
        var Authors = "";
        for (var index = 0; index < DataArray.length; index++) {
            Authors += "<tr><td>"
                + DataArray[index].FirstName + "</td>" + "<td>"
                + DataArray[index].SecondName + "</td>" + "<td>"
                + DataArray[index].FirstLastName + "</td>" + "<td>"
                + DataArray[index].SecondLastName + "</td></tr>";
        }
     
        return "<table>" +"<tr><th>First Name</th><th>Middle Name</th><th>Last Name</th><th>Surname</th></tr>" +Authors + "</table>";
          
    }

    function ShowAuthors(button) {
        var tr = $(button).parents('tr');
        var row = $MainTable.row(tr); 

        if (row.child.isShown()) {
            row.child.hide();
            tr.removeClass('shown');
            $(button).removeClass("glyphicon glyphicon-minus").addClass("glyphicon glyphicon-plus")
        } else {

            $.ajax({
                type: "GET",
                url: "http://localhost:61232/Books/getBookAuthors",
                data: { BookId: $MainTable.row(row.index()).data()[1] },
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (JsonData) {
                    row.child(AuthorSubTable(JsonData)).show();
                    tr.addClass('shown');
                    $(button).removeClass("glyphicon glyphicon-plus").addClass("glyphicon glyphicon-minus");
                },
                error: function () {
                    console.log("There was an error with the JSON file.");
                }
            });

        }
       
    }

    function ErrorAlert() {

        if ($("#ErrorAlert").length == 0) {
            var htmlModal1 = '<div id=ErrorAlert class="alert alert-danger">' +
                                '<strong>Error!</strong> The request could not be processed correctly, please try again.' +
                             '</div>';
            $("body").prepend(htmlModal1).animate({ scrollTop: 0 }, "slow");

        } else {
            $("body").animate({ scrollTop: 0 }, "slow");
        }
    }

    


</script>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="myDT" class="table">
    <thead>
        <tr>
            <th>
                <label>
                    Authors
                </label>
            </th>
             <th>
                @Html.DisplayNameFor(model => model.BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicationYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                <label>Buttons</label>
            </th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<div class="modal fade" id="ConfirmationModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Confirmation</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure you wish to delete this row?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal" onclick="RemoveFromTable()"  >Yes</button>
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">No</button>
                <label id="StoredIndex" style="display:none"></label>
            </div>
        </div>

    </div>
</div>





