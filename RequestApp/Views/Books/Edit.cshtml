            var Row = $(this).parents("tr");
            var Index = $table.row(Row).index();
            var Data = $table.row(Index).data();
            $("#hidden2").val(Index);
            console.log("jaja saludos");
            $("#myDeleteModal").modal();

        });//Removes the data from teh data table
        $("#YesDelete").click(function () {
            $("#myDeleteModal").modal("hide");
            $table
                .row($("#hidden2").val())
                .remove()
                .draw();
        })//Confirmation Modal Delete;
        $("#NoDelete").click(function () {
            $("#myDeleteModal").modal("hide");
        });//Confirmation Modal
        $.ajax({
            type: "GET",
            url: "http://localhost:61232/Books/getSingleBook",
            data: BookObject,
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (Data) {
                console.log(Data);
                var DataArray = [];
                var Authors = Data.Authors;
                for (i = 0; i < Authors.length; i++) {
                    var ArrayAuthors =
                        [
                            Authors[i].FirstName, Authors[i].SecondName, Authors[i].FirstLastName, Authors[i].SecondLastName, "<span class='glyphicon glyphicon-remove-circle'> |</span><span class='glyphicon glyphicon-ok-circle'></span>"
                        ]
                    $table.row.add(ArrayAuthors).draw()
                }
                $("#Description").val(Data.Description),
                    $("#ImageUrl").val(Data.ImageUrl),
                    $("#PublicationYear").val(Data.PublicationYear),
                    $("#Publisher").val(Data.Publisher),
                    $("#Title").val(Data.Title)

            },
            error: function () {
                WarningMessage();
            }
        });//Close GET Ajax
        $("#btnEdit").click(function () {
            JasonObject = {
                BookId: $.urlParam("BookId"),
                Description: $("#Description").val(),
                ImageUrl: $("#ImageUrl").val(),
                PublicationYear: $("#PublicationYear").val(),
                Publisher: $("#Publisher").val(),
                Title: $("#Title").val(),
                Authors: GetAuthors()
            };
            if (ValidateForm(".form-horizontal")) {
                $.ajax({
                    type: "PUT",
                    url: "http://localhost:61232/Books/UpdateBook ",
                    data: JSON.stringify(JasonObject),
                    dataType: "json",
                    contentType: 'application/json; charset=utf-8',
                    success: function (Data) {
                        window.location.replace("http://localhost:61232/Books");
                    },
                    error: function () {
                        WarningMessage();
                    }
                });//Close PUT Ajax
            }
        });//Save changes
        $("#EditRow").click(function () {
            if (ValidateForm(".modal-body")) {
                $("#myModal").modal("hide");
                var Data = [
                    $("#FirstName").val(),
                    $("#SecondName").val(),
                    $("#FirstLastName").val(),
                    $("#SecondLastName").val(),
                    "<span class='glyphicon glyphicon-remove-circle'> |</span>" +
                    "<span class='glyphicon glyphicon-ok-circle'></span>"
                ];
                console.log(Data)
                $table
                    .row($("#hidden").val())
                    .data(Data)
                    .draw();
            }
        });//Edit Row
        $("#CloseModal").click(function () {
        $("#myModal").modal("hide");
        });//Close Modal
        $("#AddRow").click(function () {
            
            if (ValidateForm(".modal-body")) {
                
                var Data = [
                    $("#FirstName").val(),
                    $("#SecondName").val(),
                    $("#FirstLastName").val(),
                    $("#SecondLastName").val(),
                    "<span class='glyphicon glyphicon-remove-circle'> |</span>" +
                    "<span class='glyphicon glyphicon-ok-circle'></span>"
                ];
                var Obj = { FirstName: Data[0], SecondName: Data[1], FirstLastName: Data[2], SecondLastName: Data[3] };

                $("#MainTable").DataTable()
                    .row
                    .add(Data)
                    .draw();
                $("#myModal").modal("hide");
            }
        });//Closes Add Row function
    });//End of DocumentReady
    function ValidateForm(Zone) {
        var Error = true;
        $(Zone + " .form-control").not("#hidden").each(function () {
            if ($(this).val().trim() == "" || $(this).val() < 0) {
                $(this).addClass("Error");
                Error = false;
            }
            else {
                $(this).removeClass("Error");
            }
        });
        return Error;
    }//Close Validation function
    function GetAuthors() {
        var Array = [];
        var Table = $table.data();
        for (var i = 0; i < Table.length; i++) {
            var ArrayTable = { FirstName: Table[i][0], SecondName: Table[i][1], FirstLastName: Table[i][2], SecondLastName: Table[i][0] };
            Array.push(ArrayTable);
        }
        return Array;
    }//Close Get Authors Function
    function WarningMessage() {
        if (!$('div[class="alert-danger"]').length) {
            $("#myDT").prepend('<div class="alert alert-danger">< strong > Omaiga!</strong >Something went wrong >:O</div >');
        }
    }//Close Warning Message function
    function CloseModal() {
        $("#yModal").modal("hide");
    }//Close modal function
    function OpenModal() {
        $("#myModal").modal();
        $("#EditRow").css("display", "none");
        $("#AddRow").css("display", "inline");
        $(".modal-content .form-control").not(".hidden").not(".hidden2").val("");
    }//Opens up the modal cleaning the data

</Script>
