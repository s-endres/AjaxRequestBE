@model RequestApp.Models.Book

@{
    ViewBag.Title = "Create";
}
<style>
    .Error {
        border: solid 1px red;
    }
</style>


<!-- DataTables JavaScript -->
<script src="/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<h2>Create</h2>

<script>
    $(document).ready(function () {


        $vDTable = $('#dTable').DataTable({
            
            responsive: true,
            "columnDefs": [
                {
                    "targets": [4],
                    "sortable": false
                }
            ]

        });

        $('tbody').on('click', '.glyphicon-trash', function () {
            $vDTable.row($(this).parents("tr")).remove().draw();
        });

        $(document).on('click', '.glyphicon-folder-open', function () {
            $('.modal-body input[type="text"]').val("");
            DynamicModal(true);
        });


        $('tbody').on('click', '.glyphicon-edit', function () {
            DynamicModal(false); 
            var Parent = $(this).parents("tr");
            var index = $vDTable.row(Parent).index();
            var dataArray = $vDTable.row(index).data();
            $("#firstInput").val(dataArray[0]);
            $("#secondInput").val(dataArray[1]);
            $("#thirdInput").val(dataArray[2]);
            $("#fourthInput").val(dataArray[3]);
            $("#hiddenInput").val(index); 
        })

        $("#btnSave").click(function () {

            if (validateMyForm() && validateMyDTable()) {

                var authors = [];

                $($vDTable.rows().data()).each(function (index, row) {
                    var authorObj = {
                        FirstName: row[0],
                        SecondName: row[1],
                        FirstLastName: row[2],
                        SecondLastName: row[3]
                    }

                    authors.push(authorObj);

                });


                $.ajax({
                    type: "POST",
                    url: "http://localhost:61232/Books/AddNewBook",
                    data: JSON.stringify({
                        Title: $("#Title").val(),
                        Description: $("#Description").val(),
                        ImageURL: $("#ImageURL").val(),
                        Publisher: $("#Publisher").val(),
                        PublicationYear: $("#PublicationYear").val(),
                        Authors: authors
                    }),
                    dataType: "json",
                    contentType: 'application/json; charset=utf-8',
                    success: function (Data) {
                        if (Data) {
                            window.location.replace("http://localhost:61232/Books/");
                        } else {
                            pError();
                        }
                    },
                    error: function () {
                        pError();
                    }
                });
            }
        });

        $('#btnEdit').click(function () {
            if (validateMyModalForm()) {
                var hidden = $("#hiddenInput").val();
                $vDTable.row(hidden).data([
                    $("#firstInput").val(),
                    $("#secondInput").val(),
                    $("#thirdInput").val(),
                    $("#fourthInput").val(),
                    "<span class='glyphicon glyphicon-trash'></span> <span> | </span> " +
                    "<span class='glyphicon glyphicon-edit'></span>"
                ]).draw();
                $("#myModal").modal("hide");
            }
        });


    });

    function pError() {
        if (!$("p[class='ErrorClass']").length) {
            $(".form-horizontal").append("<p class='ErrorClass' style='color: red;'>An error has occurred while loading the data </p>");
        }
    }

    function DynamicModal(flag) {
        if (flag) {
            $("#btnAdd").css("display", "inline");
            $("#btnEdit").css("display", "none");
        } else {
            $("#btnEdit").css("display", "inline");
            $("#btnAdd").css("display", "none");
        }
        $('#myModal').modal('show');
    }

    function SwapClass(ThisText, ClassR, ClassA) {
        $(ThisText).removeClass(ClassR);
        $(ThisText).addClass(ClassA);
    }
    function validateMyForm() {
        var flag = true;
        $(".form-horizontal div input[type='text']").each(function () {
            if ($(this).val().trim() == "") {
                SwapClass($(this).parent(), "has-success", "has-error");
                flag = false;
            } else {
                SwapClass($(this).parent(), "has-error", "has-success");
            }

        })

        $(".form-horizontal div input[type='number']").each(function () {
            if ($(this).val().trim() == "" || $(this).val() <= 0) {
                SwapClass($(this).parent(), "has-success", "has-error");
                flag = false;
            } else {
                SwapClass($(this).parent(), "has-error", "has-success");
            }

        });
        return flag;
    }


    function validateMyModalForm() {
        var flag = true;
        $('#myModalForm div input[type="text"]').each(function () {
            if ($.trim(this.value) == "") {
                $(this).addClass("Error");
                flag = false;
            } else {
                $(this).removeClass("Error");
            }
        });
        return flag;
    }

    function validateMyDTable() {
        var flag = true;

        if ($vDTable != null) {
            if ($vDTable.data().length <= 0) {
                $(this).addClass("Error");
                flag = false;
            } else {
                $(this).removeClass("Error");
            }
            return flag;
        }
    }

    function add() {
        if (validateMyModalForm()) {
            $vDTable.row.add([
                $("#firstInput").val(),
                $("#secondInput").val(),
                $("#thirdInput").val(),
                $("#fourthInput").val(),
                "<span class='glyphicon glyphicon-trash'></span> <span> | </span> " +
                "<span class='glyphicon glyphicon-edit'></span>"
            ]).draw();

            $("#myModalForm div input[type='text']").val("");
            $("#btnClose").click();
        }
    }


</script>

