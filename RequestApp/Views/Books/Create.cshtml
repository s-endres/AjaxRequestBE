<h2>Create</h2>

<script>
    $(document).ready(function () {
        $("#btnSave").click(function() {
            doPost();
        });

    });

    function doPost() {

        var authorsList = []
        $($("#dataTables-example").DataTable().rows().data()).each(function(index, row) {
            var author = {
                FirstName: row[0],
                SecondNAme: row[1],
                FirstLastName: row[2],
                SecondLastName: row[3]
            }
            authorsList.push(author);
        });

        $.ajax({
            type: "POST",
            url: "http://localhost:61232/Books/AddNewBook",
            data: JSON.stringify({
                Title: $("#Title").val(),
                Description: $("#Description").val(),
                ImageUrl: $("#ImageUrl").val(),
                Publisher: $("#Publisher").val(),
                PublicationYear: parseInt($("#PublicationYear").val()),
                Authors: authorsList
            }),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data) {
                    window.location.replace("http://localhost:61232/Books/");
                }else
                {
                    alert('Wops ERROR O.O" ');
                }
            },
            error: function () {
                alert('Wops ERROR O.O" ');
            }
        });
    }
</script>

